{{ 'section-gallery.css' | asset_url | stylesheet_tag }}
{% style %}
  .section-{{ section.id }}-padding {
    background: {{ section.settings.bg_color }};
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}
<section class="wave__parent section-{{ section.id }}-padding">
  {% if section.settings.title != blank %}
    <div class="gallery__marquee--header">
      {% if section.settings.icon != blank %}
      <div class="gallery__marquee-icon">
        {{ section.settings.icon
          | image_url: width: 66
          | image_tag: alt: section.settings.icon.alt, width: 66, loading: 'lazy'
        }}
      </div>
      {% endif %}
      <h2 class="gallery__marquee--title h3">
        {{ section.settings.title }}
      </h2>
    </div>
  {% endif %}
  {% if section.blocks.size > 0 %}
    <div class="gallery__marquee--wrapper">
      <div class="gallery__marquee--track">
        {% for i in (1..20) %}
          {% for block in section.blocks %}
            {% if block.settings.image %}
              <div class="gallery__marquee--item" {{ block.shopify_attributes }}>
                {{
                  block.settings.image
                  | image_url: width: 900
                  | image_tag:
                    widths: '300, 450, 600, 900',
                    sizes: '(max-width: 768px) 100vw, 450px',
                    loading: 'lazy',
                    class: 'aspect-image'
                }}
              </div>
            {% endif %}
          {% endfor %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
  {% if section.settings.wave_after != blank %}
    <div class="wave__after">
      {{ section.settings.wave_after | image_url: width: auto, height: auto | image_tag: alt: 'Hero Wave', loading:'lazy'  }}
    </div>
  {% endif %}
</section>
{% schema %}
{
  "name": "Gallery Section",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "wave_after",
      "label": "Add Wave",
      "info": "Wave appear at bottom of the section"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "We Are Dedicated To Transforming Your Dog's Health Journey With Vibrant, Premium Supplements That Spark Joy And Vitality."
    },
    {
      "type": "header",
      "content": "Desktop Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 50,
      "max": 250,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 50,
      "max": 250,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 50
    },
    {
      "type": "header",
      "content": "Mobile Padding"
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#F5F5F5"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Marquee Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gallery Section",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}