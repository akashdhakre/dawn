{{ 'instagram-section.css' | asset_url | stylesheet_tag }}

<div class="instagram-grid-wrapper page-width">
  <h2>{{ section.settings.section_heading }}</h2>
  <div class="instagram-grid">
    {% for block in section.blocks %}
      {% if block.settings.image %}
        <div class="instagram-grid__item">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="instagram-grid__link">
              <img src="{{ block.settings.image | image_url: width: 800 }}" alt="{{ block.settings.image.alt | escape }}" loading="lazy" />
            </a>
          {% else %}
            <img src="{{ block.settings.image | image_url: width: 800 }}" alt="{{ block.settings.image.alt | escape }}" loading="lazy" />
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Instagram Style Grid",
  "tag": "section",
  "class": "instagram-grid-section",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Follow us on Instagram"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Instagram Style Grid",
      "category": "Media",
      "blocks": [
        { "type": "image_block" },
        { "type": "image_block" },
        { "type": "image_block" }
      ]
    }
  ]
}
{% endschema %}
